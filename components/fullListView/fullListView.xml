<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:appbuilder="appbuilder/action-bar"
      loaded="pageLoaded">

    <GridLayout rows="auto, *" swipe="backSwipe">
        <appbuilder:action-bar />
        <StackLayout row="1">

            <ListView items="{{ listItems }}">

                <ListView.itemTemplate>
                    <GridLayout columns="20, 100, *">

                        <Image col="0" width="20" height="20" src="{{ icon }}" />
                        <Image col="1" width="100" height="100" src="{{ image }}" />
                        <StackLayout col="2">
                            <Label text="{{ header }}" />
                            <Label text="{{ description }}" />
                        </StackLayout>

                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>

            <!-- additional view content -->
        </StackLayout>
    </GridLayout>
</Page>
