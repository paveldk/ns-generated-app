<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:appbuilder="appbuilder/action-bar"
      loaded="pageLoaded">

    <GridLayout rows="auto, *" swipe="backSwipe">
        <appbuilder:action-bar />
        <StackLayout row="1">
            <StackLayout>

                <GridLayout columns="*, *" rows="auto" height="56" padding="10">
                    <Label text="TextField" cssClass="label" verticalAlign="center" />
                    <TextField col="2" cssClass="input" verticalAlign="center" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto" height="56" padding="10">
                    <Label text="SearchBox" cssClass="label" />
                    <SearchBar col="2" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto" height="56" padding="10">
                    <Label text="PasswordBox" cssClass="label" />
                    <TextField col="2" secure="true" cssClass="input" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto" height="56" padding="10">
                    <Label text="SwitchField" cssClass="label" />
                    <Switch col="2" checked="false" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <!-- firstForm additional fields -->

                <GridLayout columns="*, *" rows="auto" height="56" padding="10">
                    <Button text="Cancel" tap="onfirstFormFormCancel" />
                    <Button col="2" text="Confirm" tap="onfirstFormFormSubmit" />
                </GridLayout>

            </StackLayout>

            <!-- additional view content -->
        </StackLayout>
    </GridLayout>
</Page>
