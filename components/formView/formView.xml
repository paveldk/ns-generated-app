<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:appbuilder="appbuilder/action-bar"
      loaded="pageLoaded">

    <GridLayout rows="auto, *" swipe="backSwipe">
        <appbuilder:action-bar />
        <StackLayout row="1" cssClass="form-view">
            <StackLayout>

                <GridLayout columns="*, *" rows="auto">
                    <StackLayout height="50" />
                    <Label text="TextField" cssClass="label" />
                    <TextField col="1" cssClass="input" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto">
                    <StackLayout height="50" />
                    <Label text="SearchBox" cssClass="label" />
                    <SearchBar col="1" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto">
                    <StackLayout height="50" />
                    <Label text="PasswordBox" cssClass="label" />
                    <TextField col="1" secure="true" cssClass="input" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <GridLayout columns="*, *" rows="auto">
                    <StackLayout height="50" />
                    <Label text="SwitchField" cssClass="label" />
                    <Switch col="1" checked="false" />
                </GridLayout>
                <StackLayout cssClass="form-item-border" height="1"></StackLayout>

                <!-- firstForm additional fields -->

                <GridLayout columns="*, *" rows="auto" paddingTop="12">
                    <Button text="Cancel" tap="onfirstFormFormCancel" />
                    <Button col="1" text="Confirm" tap="onfirstFormFormSubmit" />
                </GridLayout>

            </StackLayout>

            <!-- additional view content -->
        </StackLayout>
    </GridLayout>
</Page>
