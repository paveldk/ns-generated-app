<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <StackLayout>

        <StackLayout>

            <Label text="TextField" cssClass="label" />
            <Border borderWidth="1" borderColor="#ccc">

                <TextField cssClass="input" />

            </Border>


            <Label text="SearchBox" cssClass="label" />
            <Border borderWidth="1" borderColor="#ccc">

                <SearchBar />

            </Border>


            <Label text="PasswordBox" cssClass="label" />
            <Border borderWidth="1" borderColor="#ccc">

                <TextField secure="true" cssClass="input" />

            </Border>


            <Label text="SwitchField" cssClass="label" />
            <Border borderWidth="1" borderColor="#ccc">

                <Switch checked="false" />

            </Border>

            <!-- firstForm additional fields -->

            <Button text="Cancel" tap="onfirstFormFormCancel" />


            <Button text="Confirm" tap="onfirstFormFormSubmit" />

        </StackLayout>

        <!-- additional view content -->
    </StackLayout>
</Page>